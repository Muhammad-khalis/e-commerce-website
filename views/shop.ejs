<%- include('./partials/header') %>

<% if (success && success.length > 0) { %>
  <div class="fixed top-5 left-1/2 -translate-x-1/2 z-50">
    <div class="inline-flex items-center gap-3 rounded-lg bg-emerald-500/90 px-4 py-2 text-sm text-white shadow-lg ring-1 ring-emerald-400/60">
      <span><%= success %></span>
      <button type="button" class="text-xs/none opacity-80 hover:opacity-100 transition">
        ×
      </button>
    </div>
  </div>
<% } %>

<section class="min-h-screen bg-slate-50">
  <div class="container mx-auto px-4 py-10 lg:px-10">
    <!-- Header -->
    <div class="mb-6 flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
      <div>
        <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
          Shop
        </h1>
        <p class="mt-1 text-sm text-slate-500">
          Browse products, apply filters, and add items to your cart.
        </p>
      </div>
    </div>

    <!-- Layout -->
    <div class="grid gap-8 lg:grid-cols-[260px,1fr]">
      <!-- Sidebar -->
      <aside class="rounded-xl border border-slate-200 bg-white/90 p-5 shadow-sm">
        <div class="flex items-center justify-between gap-2">
          <h2 class="text-sm font-semibold text-slate-800">
            Sort & filter
          </h2>
        </div>

        <!-- Sort by -->
        <div class="mt-4">
          <form action="/shop" method="get" class="space-y-2">
            <label for="sortby" class="block text-xs font-medium text-slate-600">
              Sort by
            </label>
            <select
              id="sortby"
              name="sortby"
              class="mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-xs text-slate-800 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="popular" <%= sortby === 'popular' ? 'selected' : '' %>>Popular</option>
              <option value="newest" <%= sortby === 'newest' ? 'selected' : '' %>>Newest</option>
            </select>
          </form>
        </div>

        <!-- Collections -->
        <div class="mt-8">
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">
            Collections
          </p>
          <nav class="mt-3 space-y-1 text-sm">
            <a href="/shop?collection=new"
               class="block rounded-md px-2 py-1.5 text-slate-600 hover:bg-slate-100 hover:text-slate-900 transition">
              New collection
            </a>
            <a href="/shop"
               class="block rounded-md px-2 py-1.5 text-slate-600 hover:bg-slate-100 hover:text-slate-900 transition">
              All products
            </a>
            <a href="/shop?discounted=true"
               class="block rounded-md px-2 py-1.5 text-slate-600 hover:bg-slate-100 hover:text-slate-900 transition">
              Discounted products
            </a>
          </nav>
        </div>

        <!-- Basic filters -->
        <div class="mt-8">
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">
            Filters
          </p>
          <div class="mt-3 space-y-2 text-sm text-slate-600">
            <div class="flex items-center gap-2">
              <input id="available" type="checkbox" class="h-4 w-4 rounded border-slate-300 text-blue-600 focus:ring-blue-500">
              <label for="available" class="text-xs">In stock</label>
            </div>
            <div class="flex items-center gap-2">
              <input id="has-discount" type="checkbox" class="h-4 w-4 rounded border-slate-300 text-blue-600 focus:ring-blue-500">
              <label for="has-discount" class="text-xs">On discount</label>
            </div>
          </div>
        </div>
      </aside>

      <!-- Products grid -->
      <main class="flex flex-col gap-5">
        <% if (typeof products !== 'undefined' && products && products.length > 0) { %>
          <div class="flex items-center justify-between text-xs text-slate-500">
            <p>
              Showing <span class="font-medium"><%= products.length %></span> products
            </p>
          </div>

          <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
            <% products.forEach(function(product) { %>
              <article
                class="group flex flex-col overflow-hidden rounded-xl border border-slate-200 bg-white/90 shadow-sm transition hover:-translate-y-1 hover:border-blue-500/60 hover:shadow-md">
                
                <!-- Product image with dynamic background -->
                <div class="relative h-48 w-full overflow-hidden"
                     style="background-color:<%= product.bgcolor %>">
                  <% if (product.image) { %>
                    <img
                      class="h-full w-full object-contain p-4 transition duration-300 group-hover:scale-105"
                      src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                      alt="<%= product.name %>">
                  <% } else { %>
                    <div class="flex h-full w-full items-center justify-center text-xs font-medium text-slate-400">
                      No image
                    </div>
                  <% } %>

                  <!-- Color tags -->
                  <div class="absolute bottom-3 left-3 flex items-center gap-1.5 rounded-full bg-white/90 px-2 py-1 shadow-sm">
                    <span class="h-4 w-4 rounded-full border border-slate-200"
                          style="background-color:<%= product.bgcolor %>"></span>
                    <span class="h-4 w-4 rounded-full border border-slate-200"
                          style="background-color:<%= product.panelcolor %>"></span>
                    <span class="h-4 w-4 rounded-full border border-slate-200"
                          style="background-color:<%= product.textcolor %>"></span>
                  </div>
                </div>

                <!-- Content -->
                <div class="flex flex-1 flex-col px-4 py-4"
                     style="background-color:<%= product.panelcolor %>; color:<%= product.textcolor %>">
                  <h3 class="line-clamp-2 text-sm font-medium">
                    <%= product.name %>
                  </h3>

                  <div class="mt-3 flex items-baseline gap-2">
                    <% if (product.discount && product.discount > 0) { %>
                      <p class="text-base font-semibold">
                        ₹ <%= product.discount %>
                      </p>
                      <p class="text-xs opacity-75 line-through">
                        ₹ <%= product.price %>
                      </p>
                    <% } else { %>
                      <p class="text-base font-semibold">
                        ₹ <%= product.price %>
                      </p>
                    <% } %>
                  </div>

                  <div class="mt-4 flex items-center justify-between">
                    <a href="/product/<%= product._id %>"
                       class="text-xs font-medium underline-offset-2 hover:underline">
                      View details
                    </a>

                    <a class="w-8 h-8 flex items-center justify-center rounded-full bg-white text-slate-800 shadow-sm hover:bg-slate-100 transition"
                       href="/addtocart/<%= product._id %>">
                      <i class="ri-add-line text-base"></i>
                    </a>
                  </div>
                </div>
              </article>
            <% }) %>
          </div>
        <% } else { %>
          <div class="flex h-64 flex-col items-center justify-center rounded-xl border border-dashed border-slate-200 bg-white/60">
            <p class="text-sm font-medium text-slate-700">
              No products available
            </p>
            <p class="mt-1 text-xs text-slate-500">
              Please check back later or adjust your filters.
            </p>
          </div>
        <% } %>
      </main>
    </div>
  </div>
</section>

<%- include('./partials/footer') %>
