<%- include('./partials/header') %>

<section class="min-h-screen bg-slate-50">
  <div class="container mx-auto px-4 py-10 lg:px-10">
    <!-- Page header -->
    <div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <div>
        <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
          All products
        </h1>
        <p class="mt-1 text-sm text-slate-500">
          Manage all items in your catalog and review pricing at a glance.
        </p>
      </div>

      <a href="/products/create"
         class="inline-flex items-center justify-center rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-50 transition">
        + Add product
      </a>
    </div>

    <!-- Products grid -->
    <% if (products && products.length > 0) { %>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4">
        <% products.forEach(product => { %>
          <article
            class="group flex flex-col overflow-hidden rounded-xl border border-slate-200 bg-white/90 shadow-sm transition hover:-translate-y-1 hover:border-blue-500/60 hover:shadow-md">
            
            <!-- Image / placeholder -->
            <div class="relative h-48 w-full overflow-hidden bg-slate-100">
              <% if (product.image) { %>
                <img
                  class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
                  src="data:image/png;base64,<%= product.image.toString('base64') %>"
                  alt="<%= product.name %>">
              <% } else { %>
                <div class="flex h-full w-full items-center justify-center text-xs font-medium text-slate-400">
                  No image
                </div>
              <% } %>

              <!-- Color dots overlay -->
              <div class="absolute bottom-3 left-3 flex items-center gap-1.5 rounded-full bg-white/90 px-2 py-1 shadow-sm">
                <span class="h-4 w-4 rounded-full border border-slate-200"
                      style="background-color:<%= product.bgcolor %>"></span>
                <span class="h-4 w-4 rounded-full border border-slate-200"
                      style="background-color:<%= product.panelcolor %>"></span>
                <span class="h-4 w-4 rounded-full border border-slate-200"
                      style="background-color:<%= product.textcolor %>"></span>
              </div>
            </div>

            <!-- Content -->
            <div class="flex flex-1 flex-col px-4 py-4">
              <h2 class="line-clamp-2 text-sm font-medium text-slate-900">
                <%= product.name %>
              </h2>

              <div class="mt-3 flex items-baseline gap-2">
                <% if (product.discount && product.discount > 0) { %>
                  <p class="text-base font-semibold text-blue-600">
                    PKR <%= product.discount %>
                  </p>
                  <p class="text-xs text-slate-400 line-through">
                    PKR <%= product.price %>
                  </p>
                <% } else { %>
                  <p class="text-base font-semibold text-slate-900">
                    PKR <%= product.price %>
                  </p>
                <% } %>
              </div>

              <p class="mt-2 text-[11px] uppercase tracking-wide text-slate-400">
                ID: <span class="font-medium"><%= product._id || product.id %></span>
              </p>

              <div class="mt-4 flex items-center justify-between gap-2">
                <a href="/products/<%= product._id || product.id %>"
                   class="inline-flex items-center text-xs font-medium text-blue-600 hover:text-blue-700">
                  View details
                </a>

                <div class="flex items-center gap-2">
                  <a href="/products/<%= product._id || product.id %>/edit"
                     class="inline-flex items-center justify-center rounded-md border border-slate-200 bg-white px-2.5 py-1 text-[11px] font-medium text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition">
                    Edit
                  </a>
                  <form action="/products/<%= product._id || product.id %>?_method=DELETE"
                        method="post">
                    <button
                      type="submit"
                      class="inline-flex items-center justify-center rounded-md bg-rose-500 px-2.5 py-1 text-[11px] font-medium text-white shadow-sm hover:bg-rose-600 transition">
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <div class="flex h-64 flex-col items-center justify-center rounded-xl border border-dashed border-slate-200 bg-white/60">
        <p class="text-sm font-medium text-slate-700">
          No products yet
        </p>
        <p class="mt-1 text-xs text-slate-500">
          Start by creating your first product in the catalog.
        </p>
        <a href="/products/create"
           class="mt-4 inline-flex items-center justify-center rounded-md bg-blue-600 px-4 py-2 text-xs font-semibold text-white shadow-sm hover:bg-blue-700 transition">
          + Create product
        </a>
      </div>
    <% } %>
  </div>
</section>

<%- include('./partials/footer') %>
